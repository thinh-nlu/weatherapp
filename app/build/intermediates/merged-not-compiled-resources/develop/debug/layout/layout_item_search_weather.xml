<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130sdp"
    android:layout_marginBottom="@dimen/_16sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_search_item">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="0dp"
        android:layout_margin="@dimen/_1sdp"
        app:cardCornerRadius="@dimen/_20sdp">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imgWeatherBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rain"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_18sdp"
        android:paddingHorizontal="@dimen/_12sdp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:paddingVertical="@dimen/_3sdp"
        android:text="Tokyo"
        android:background="@drawable/bg_text_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvDegree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="46sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:text="10\u00B0"
        app:layout_constraintTop_toBottomOf="@id/tvLocation"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_25sdp"/>

    <View
        android:layout_width="@dimen/_1sdp"
        android:layout_height="0dp"
        android:background="#80FFFFFF"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgWeather"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imgWeather"
        android:layout_width="@dimen/_64sdp"
        android:layout_height="@dimen/_64sdp"
        android:src="@drawable/ic_snow_big"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_18sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/imgWeather"
        app:layout_constraintStart_toStartOf="@id/imgWeather"
        app:layout_constraintEnd_toEndOf="@id/imgWeather"/>
</androidx.constraintlayout.widget.ConstraintLayout>
